###> symfony/framework-bundle ###
APP_ENV=prod
APP_SECRET=CHANGE_ME_TO_RANDOM_64_CHARS
APP_SHARE_DIR=var/share
###< symfony/framework-bundle ###

###> symfony/routing ###
DEFAULT_URI=https://your-domain.com
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# Format: postgresql://user:password@host:5432/dbname?serverVersion=16&charset=utf8
DATABASE_URL="postgresql://app:!ChangeMe!@database:5432/app?serverVersion=16&charset=utf8"
###< doctrine/doctrine-bundle ###

###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=CHANGE_ME_TO_SECURE_PASSPHRASE
###< lexik/jwt-authentication-bundle ###

###> nelmio/cors-bundle ###
# Adapter avec le domaine du front en production
CORS_ALLOW_ORIGIN='^https?://(your-domain\.com|www\.your-domain\.com)(:[0-9]+)?$'
###< nelmio/cors-bundle ###

###> Database configuration ###
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_VERSION=16
###< Database configuration ###
